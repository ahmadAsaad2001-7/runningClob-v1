@model runningClob.ViewModels.EditUserDashboardVM

@{
    ViewData["Title"] = "Edit User Profile";
}

<h1>Edit User Profile</h1>

<form asp-action="EditUserProfile" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <!-- Show current image if exists -->
    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
    {
        <div class="form-group">
            <label>Current Profile Image:</label>
            <div>
                <img src="@Model.ProfileImageUrl" alt="Current profile image"
                     style="max-width: 200px; max-height: 200px; border-radius: 50%;" />
            </div>
        </div>
    }

    <div class="form-group">
        <label asp-for="Pace">Pace (minutes per mile)</label>
        <input asp-for="Pace" class="form-control" type="number" min="0" max="60" />
        <span asp-validation-for="Pace" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mileage">Weekly Mileage</label>
        <input asp-for="Mileage" class="form-control" type="number" min="0" max="500" />
        <span asp-validation-for="Mileage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>

    <!-- File upload for new image -->
    <div class="form-group">
        <label asp-for="ProfileImage">Upload New Profile Image</label>
        <input asp-for="ProfileImage" type="file" class="form-control" />
        <span asp-validation-for="ProfileImage" class="text-danger"></span>
        <small class="form-text text-muted">Leave empty to keep current image</small>
    </div>

    <button type="submit" class="btn btn-primary">Update Profile</button>
    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}