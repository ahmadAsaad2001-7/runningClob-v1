@model IEnumerable<runningClob.Models.Club>

@{
    ViewData["Title"] = "Clubs by Country";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h2>Clubs by Country</h2>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">
                    @ViewBag.Message
                </div>
            }

            <!-- Country Filter Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" asp-controller="Clob" asp-action="GetClubsByCountryAsync" class="row">
                        <div class="col-md-8">
                            <label for="country">Select Country:</label>
                            <select name="country" class="form-control" required>
                                <option value="">Choose a country...</option>
                                <option value="US">United States</option>
                                <option value="GB">United Kingdom</option>
                                <option value="CA">Canada</option>
                                <option value="AU">Australia</option>
                                <option value="SA">Saudi Arabia</option>
                                <option value="AE">United Arab Emirates</option>
                                <option value="QA">Qatar</option>
                                <option value="EG">Egypt</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="fas fa-search"></i> Find Clubs
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Results -->
            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var club in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="@club.Image" class="card-img-top" alt="@club.Title" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">@club.Title</h5>
                                    <p class="card-text">@club.Description</p>
                                    <p class="text-muted">
                                        <i class="fas fa-map-marker-alt"></i>
                                        @club.Address?.City, @club.Address?.Country
                                    </p>
                                    <a href="@Url.Action("Detail", "Clob", new { id = club.Id })" class="btn btn-primary">View Club</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (ViewContext.HttpContext.Request.Method == "GET" && !string.IsNullOrEmpty(Context.Request.Query["country"]))
            {
                <div class="alert alert-warning">
                    No clubs found in the selected country.
                </div>
            }
        </div>
    </div>
</div>